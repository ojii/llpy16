import mem

def num_to_char(num):
    num += 48
    return num

def prepare(char_code, color, highlight_color):
    color <<= 12
    highlight_color <<=8
    char_code |= color
    char_code |= highlight_color
    return char_code

def write(char_code, position):
    mem.set(0x8000 + position, char_code)
