def prepare_character():
    # sets A to the character code
    # given the symbol at A
    # color at B
    # highlight color at C
    B <<= 12
    C <<= 8
    A |= B
    A |= C

def display_character():
    # displays character code A (prepared using prepare_character)
    # at position 0x8000 + B
    builtin_memset(0x8000 + B, A)
